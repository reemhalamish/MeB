<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_rowmovie_title"
        android:clickable="true"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/hyperlink1"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="10dp"
        android:text="check"
        android:gravity="center_vertical"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_rowmovie_poster"
        android:layout_alignTop="@+id/iv_rowmovie_poster"
        android:layout_alignBottom="@+id/iv_rowmovie_poster"

        />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/iv_rowmovie_poster"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/star_big_on"
        android:layout_centerVertical="true"
        />


</RelativeLayout>